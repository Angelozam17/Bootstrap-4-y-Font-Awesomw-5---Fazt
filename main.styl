$width = 1023px/5px
$-width = -1023px/5px
$height = 1761px/5px

body
  	background-color #333
  	color #ffffff

	nav.navbar
		border-bottom #ff4444 solid 3px
		opacity 0.9

	header#home-section
		background url('src/img/bg.jpg') no-repeat
		min-height 100vh
		background-size cover
		background-attachment fixed

		.dark-overlay
			background-color rgba(black, 0.7)
			
			
			.home-inner
				padding 150px

	section 
		img#phone-img
			width $width
			height $height


@media (max-width 992px)
	.home-inner 
		padding-top 100px

@media(max-width 767px)
	body
		background-color red
	section 
		.phone
			position relative
			#phone-img
				width $width*2
				height $height*2
		.phone-inner
			position absolute
			width $width*2
			left 50%
			margin-left $-width
			padding 120px 70px 0 70px


